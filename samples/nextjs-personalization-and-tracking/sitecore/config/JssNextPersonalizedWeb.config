<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore>
    <settings>

    </settings>
    <sites>
      <site name="JssNextPersonalizedWeb"
            patch:before="site[@name='website']"
            inherits="website"
            hostName="$(env:NEXT_HOST)"
            rootPath="/sitecore/content/JssNextPersonalizedWeb"
            startItem="/home"
            database="master" />
    </sites>
    <javaScriptServices>
      <apps>
        <app name="JssNextPersonalizedWeb"
            sitecorePath="/sitecore/content/JssNextPersonalizedWeb"
            useLanguageSpecificLayout="true"
            inherits="defaults"
            serverSideRenderingEngine="http"
            serverSideRenderingEngineEndpointUrl="http://localhost:3000/api/editing/render"
            serverSideRenderingEngineApplicationUrl="http://localhost:3000"
            debugSecurity="false"
        />
      </apps>
    </javaScriptServices>
  </sitecore>
</configuration>
